<p id="notice"><%= notice %></p>

<h1>問題集</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.user.nickname %></td>
        <td><div class="tool__button"><%= link_to '閲覧', book %></div></td>
        <td><div class="tool__button"><%= link_to '編集', edit_book_path(book) %></div></td>
        <td><div class="tool__button"><%= link_to '複製', new_book_path(book) %></div></td>
        <td><div class="tool__button"><%= link_to '削除', book, method: :delete, data: { confirm: '本当に削除しますか？' } %></div></td>
        <td><div class="tool__button"><%= link_to '神経衰弱', concentration_path(book) %></div></td>
        <td><div class="tool__button"><%= link_to '単語帳', wordbook_path(book) %></div></td>
        <td><div class="tool__button"><%= link_to 'カルタ', karuta_path(book) %></div></td>
        <td><div class="tool__button"><%= link_to 'ハイスコア', score_path(book) %></div></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しく作る', new_book_path %>
