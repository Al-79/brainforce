<p id="notice"><%= notice %></p>

<h1>問題集</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= link_to '閲覧', book %></td>
        <td><%= link_to '編集', edit_book_path(book) %></td>
        <td><%= link_to '複製', new_book_path(book) %></td>
        <td><%= link_to '削除', book, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
        <td><%= link_to 'テスト', concentration_path(book) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しく作る', new_book_path %>
