<p id="notice"><%= notice %></p>

<div class="concentration--top">
  <% @book.questions.each do |q| %>
    <div class="card--cell">
      <div class="card--format">
        <div class="wordbook--tail">
          <div class="wordbook--tail--content">
            <div class="wordbook--text", style="color: <%= q.cont_color %>; font-size: <%= @book.font_size %>px"><%= q.content %></div>
          </div>
        </div>
        <div class="wordbook--head">
          <div class="wordbook--head--content">
            <div class="wordbook--text", style="color: <%= q.ans_color %>; font-size: <%= @book.font_size %>px"><%= q.answer %></div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>